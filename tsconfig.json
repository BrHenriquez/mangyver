{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      //TODO: add path to imports
      "*":[
        "*",
        "src/*",
        "constant/*",
        "controller/*",
        "middlewares/*",
        "models/*",
        "repositories/*",
        "routes/*",
        "utils/*",
      ],
    },
  },
  "include": [
      "src/**/*",
      "src/repositories/.repository.ts"
  ],
  "exclude" : ["node_modules", "src/**/*.test.ts"],
}